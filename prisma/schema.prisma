generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int          @id @default(autoincrement())
  Fname        String
  Lname        String
  email        String       @unique
  createdAt    DateTime     @default(now())
  role         String?
  dollars      Float
  imageUrl     String       @default("https://rqhpnffkqqqtowynnwxd.supabase.co/storage/v1/object/sign/avatars/pfps/default_pfp.png?token=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1cmwiOiJhdmF0YXJzL3BmcHMvZGVmYXVsdF9wZnAucG5nIiwiaWF0IjoxNzAxMjAxNTI3LCJleHAiOjQ4NTQ4MDE1Mjd9.0nyaqdLbkQ3hhfLg8rTbqcunij0UAPL2BzYYWxtlUik&t=2023-11-28T19%3A58%3A47.457Z")
  joinedGames  Game[]
  GamePlayer   GamePlayer[]
  createdGames Game[]       @relation("Creator")
  GamePost     GamePost[]
  notifications Notification[]
  watchlist WatchListItem[]
}

model Game {
  id           Int    @id @default(autoincrement())
  name         String
  coverImageId String

  dateStart DateTime
  dateEnd   DateTime

  shareId    String
  playerData GamePlayer[]
  users      User[]
  posts      GamePost[]
  creator    User         @relation(name: "Creator", fields: [creatorID], references: [id])
  creatorID  Int
  notifications Notification[]

  @@index([creatorID])
}

model GamePlayer {
  id           Int            @id @default(autoincrement())
  user         User           @relation(fields: [userId], references: [id])
  userId       Int
  stocksHeld   StockHolding[]
  cashBalance  Float
  game         Game           @relation(fields: [gameID], references: [id])
  gameID       Int
  stocksViewed Int            @default(0)
  stocksBought Int            @default(0)
  stocksSold   Int            @default(0)
}

model StockHolding {
  id           Int        @id @default(autoincrement())
  symbol       String
  numShares    Int
  gamePlayer   GamePlayer @relation(fields: [gamePlayerId], references: [id])
  gamePlayerId Int
}

model GamePost {
  id        Int      @id @default(autoincrement())
  creator   User     @relation(fields: [userId], references: [id])
  userId    Int
  game      Game     @relation(fields: [gameID], references: [id])
  gameID    Int
  content   String
  createdAt DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  user   User     @relation(fields: [userId], references: [id])
  userId    Int
  game      Game     @relation(fields: [gameID], references: [id])
  gameID    Int

  type NotificationType

  symbol String?
  num_shares_purchased Int?
  price Decimal?
  createdAt DateTime @default(now())

  @@index([userId])
}

enum NotificationType {
  TRADE_PLACED
  GAME_JOINED
  GAME_CREATED
}

model WatchListItem {
  id  Int      @id @default(autoincrement())
  user   User     @relation(fields: [userId], references: [id])
  userId    Int
  symbol String

  @@index([userId])
}