// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  Fname        String
  Lname        String
  email        String       @unique
  createdAt    DateTime     @default(now())
  role         String?
  dollars      Float
  joinedGames  Game[]
  GamePlayer   GamePlayer[]
  createdGames Game[]       @relation("Creator")
  GamePost     GamePost[]
}

model Game {
  id           Int    @id @default(autoincrement())
  name         String
  coverImageId String

  dateStart DateTime
  dateEnd   DateTime

  shareId    String
  playerData GamePlayer[]
  users      User[]
  posts      GamePost[]
  creator    User         @relation(name: "Creator", fields: [creatorID], references: [id])
  creatorID  Int

  @@index([creatorID])
}

model GamePlayer {
  id          Int            @id @default(autoincrement())
  user        User           @relation(fields: [userId], references: [id])
  userId      Int
  stocksHeld  StockHolding[]
  cashBalance Float
  game        Game           @relation(fields: [gameID], references: [id])
  gameID      Int
}

model StockHolding {
  id           Int        @id @default(autoincrement())
  symbol       String
  numShares    Int
  gamePlayer   GamePlayer @relation(fields: [gamePlayerId], references: [id])
  gamePlayerId Int
}

model GamePost {
  id      Int    @id @default(autoincrement())
  creator User   @relation(fields: [userId], references: [id])
  userId  Int
  game    Game   @relation(fields: [gameID], references: [id])
  gameID  Int
  content String
}
